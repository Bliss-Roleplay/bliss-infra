[DEFAULT]
banaction = cloudflare
			iptables-allports
bantime = -1
findtime = 600
maxretry = 3
ignoreip = 127.0.0.1/8 ::1 {{ ansible_host }}/24
action = %(action_mwl)s
destemail = {{ target_email }}
sender = {{ snapraid_sender_email }}
sendername = Fail2Ban - Report

[sshd]
enabled = true
port = {{ security_ssh_port }}
filter = sshd

{% if variable is defined %}
{% for name in installed_configs %}
[{{ name }}]
enabled = true
port = http,https,{{ security_ssh_port }}
{% if 'endlessh' in name %}
action = %(action_)s
maxretry = 0
{% endif %}
filter = {{ name }}
logpath = %({{ name }}_log)s
{% endfor %}
{% endif %}