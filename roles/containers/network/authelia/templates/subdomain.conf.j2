server {
    listen 443 ssl http2;
    listen [::]:443 ssl http2;

    server_name {{ item.swag_subdomain }}.*;

    {% include swag_template_dir + "/nginx/headers.j2" %}
    include /config/nginx/ssl.conf;

    location / {
        include /config/nginx/proxy.conf;
        include /config/nginx/resolver.conf;

        {% if item.container_address is defined %}
        set $upstream_app {{ item.container_address }};
        {% else %}
        set $upstream_app  {{ item.container }};
        {% endif %}
        set $upstream_port 9091;
        set $upstream_proto http;
        proxy_pass $upstream_proto://$upstream_app:$upstream_port;
    }

    location /api/verify {
        include /config/nginx/proxy.conf;
        include /config/nginx/resolver.conf;

        {% if item.container_address is defined %}
        set $upstream_app {{ item.container_address }};
        {% else %}
        set $upstream_app  {{ item.container }};
        {% endif %}
        set $upstream_port 9091;
        set $upstream_proto http;
        proxy_pass $upstream_proto://$upstream_app:$upstream_port;
    }
}